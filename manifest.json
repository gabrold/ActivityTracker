{
  "manifest_version": 3,
  "name": "Team Activity Tracker",
  "version": "2.1",
  "description": "Track team activities and tasks performed by user.",
  "permissions": [
    "identity",
    "storage",
    "scripting",
    "activeTab",
    "sidePanel",
    "alarms",
    "background"
  ],
  "host_permissions": [
    "https://www.googleapis.com/",
    "https://accounts.google.com/"
  ],
  "icons": {
  "16": "icons/icon16.png",
  "32": "icons/icon32.png",
  "48": "icons/icon48.png",
  "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Open Activity Tracker",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["config.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "oauth2": {
    "client_id": "HERE GOES YOUR CLIENT ID FROM GOOGLE CLOUD PLATFORM.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets",
      "https://www.googleapis.com/auth/userinfo.profile",
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  },
  "key": "HERE GOES YOUR KEY FROM GOOGLE CLOUD AUTH"
}
